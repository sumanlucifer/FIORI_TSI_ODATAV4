<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core"
	xmlns:u="sap.ui.unified">
	<Dialog id="idP" showHeader="false"  >
		<subHeader>
			<OverflowToolbar>
				<SearchField value="{path:'objectModel>/filterBar/salesGroupSearchVal'}" search=".onSearchSalesGroup" width="100%" />
			</OverflowToolbar>
		</subHeader>
		<List
			id="idList"
			selectionChange=".onSalesGrpSelectionChange"
			mode="MultiSelect"
			growing="true"
			growingThreshold="20"
			includeItemInSelection="true">
			<headerToolbar>
				<OverflowToolbar>
					<content>
						<Title text="Select Sales Group" level="H2" />
						<ToolbarSpacer />
					</content>
				</OverflowToolbar>
			</headerToolbar>
			<dependents>
				<StandardListItem id="idStanList"
				title="{SALES_GRP}"
				iconDensityAware="false"
				iconInset="false" />
			</dependents>
		</List>
        <beginButton>
        	<Button type="Emphasized" text="{i18n>Cancel}" press="onSalesGroupDialogCancel"/>
		</beginButton>
		<endButton>
            	<Button type="Emphasized" text="{i18n>Close}"  press="onSalesGroupDialogClose"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>
