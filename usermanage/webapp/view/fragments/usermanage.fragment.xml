<core:FragmentDefinition xmlns="sap.m"
   	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	
  >
  <Table id="idProductsTable"
		inset="false"
        
        
		items="{
			path: '/Admins',
			sorter: {
				path: 'Name'
			}
		}">
		<headerToolbar>
			<OverflowToolbar>
				<content>
					<Title text="List of TSI" level="H2"/>
					<ToolbarSpacer />
				<Button text="" icon="sap-icon://sort"/>
					</content>
			</OverflowToolbar>
		</headerToolbar>
		<columns>
			<Column
				>
				<Text text="{i18n>firstname}" />
			</Column>
			
			<Column
			
				>
				<Text text="{i18n>lastname}"/>
			</Column>
			<Column
				>
				<Text text="{i18n>email}" />
			</Column>
			<Column
				>
				<Text text="{i18n>salesgroup}" />
			</Column>
            <Column
				>
				<Text text="{i18n>empcode}" />
			</Column>
            
            <Column
			>
				<Text text="{i18n>logindatetime}" />
			</Column>
             <Column
				>
				<Text text="{i18n>status}" />
			</Column>
              <Column
				>
				<Text text="{i18n>actions}" />
			</Column>
		</columns>
		<items>
			 <ColumnListItem press="onListItemPress">
                    <cells>
                         <Text text="{Name}"/>
                            <Text text="{Mobile}"/>
                             <Text  text="{Email}"/>
                          <Text text="{Role/Role}"/>
                          <Text class="sapUiTinyMarginBegin" text="{UserType/UserType}"/>
                        <ObjectStatus text="{path:'Status',formatter:'.formatter.fmttext'}" state="{= ${Status} === 1  ? 'Success' : 'Error' }"/> 
                           <Button icon="sap-icon://edit"  type="Transparent" press="onPressEdit" tooltip="Edit"></Button>
                           <Button icon="sap-icon://delete"  type="Transparent" press="onPressRemoveUser" tooltip="Remove"></Button>
                         <HBox >
                                            <Button width="100%" text="{i18n>Deactivate}"  visible="{= ${Status} === 1  ? true : false }" press="onPressActiveDeactive" type="Reject" tooltip="{i18n>Deactivate}"/>
							                <Button   text="{i18n>Activate}" visible="{= ${Status} === 1  ? false : true }"  class="sapUiSmallMarginEnd" press="onPressActiveDeactive" type="Accept" tooltip="{i18n>Activate}"/>
                                        </HBox>
                    </cells>
                </ColumnListItem>

		</items>
	</Table>
              
</core:FragmentDefinition>
